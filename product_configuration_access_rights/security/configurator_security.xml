<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="group_product_configurator_manager" model="res.groups">
            <field name="name">Product Configurator Manager</field>
            <field name="category_id" ref="product_configurator.product_config_category"/>
            <field name="implied_ids" eval="[(4, ref('product_configurator.group_product_configurator'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <!-- User can configure product without login -->
        <!-- <record id="base.public_user" model="res.users">
            <field name="groups_id" eval="[(4, ref('product_configurator.group_product_configurator'))]"/>
        </record> -->

        <!-- If user created by signing in -->
        <record id="auth_signup.default_template_user" model="res.users">
            <field name="groups_id" eval="[(4, ref('product_configurator.group_product_configurator'))]"/>
        </record>

        <!-- If user created manually (Internal Users)-->
        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4, ref('product_configurator.group_product_configurator'))]"/>
        </record>
    </data>

    <data noupdate="1">
        <record id="configure_product_template_rule_manager" model="ir.rule">
            <field name="name">Configure Product Template Manager</field>
            <field ref="product.model_product_template" name="model_id"/>
            <field name="groups" eval="[(4, ref('product_configuration_access_rights.group_product_configurator_manager'))]"/>
            <field eval="1" name="perm_read"></field>
            <field eval="1" name="perm_write"></field>
            <field eval="1" name="perm_unlink"></field>
            <field eval="1" name="perm_create"></field>
        </record>

        <record id="configure_product_template_rule_user" model="ir.rule">
            <field name="name">Configure Product Template User (Config Product)</field>
            <field ref="product.model_product_template" name="model_id"/>
            <field name="domain_force">[('config_ok', '=', True)]</field>
            <field name="groups" eval="[(4, ref('product_configurator.group_product_configurator'))]"/>
            <field eval="1" name="perm_read"></field>
            <field eval="0" name="perm_write"></field>
            <field eval="0" name="perm_unlink"></field>
            <field eval="0" name="perm_create"></field>
        </record>

         <record id="configure_product_template_rule_user_standard_product" model="ir.rule">
            <field name="name">Configure Product Template User (Standard Product)</field>
            <field ref="product.model_product_template" name="model_id"/>
            <field name="domain_force">[('config_ok', '=', False)]</field>
            <field name="groups" eval="[(4, ref('product_configurator.group_product_configurator'))]"/>
            <field eval="1" name="perm_read"></field>
            <field eval="1" name="perm_write"></field>
            <field eval="1" name="perm_unlink"></field>
            <field eval="1" name="perm_create"></field>
        </record>

        <record id="configure_product_product_rule_manager" model="ir.rule">
            <field name="name">Configure Product Template Manager</field>
            <field ref="product.model_product_product" name="model_id"/>
            <field name="groups" eval="[(4, ref('product_configuration_access_rights.group_product_configurator_manager'))]"/>
            <field eval="1" name="perm_read"></field>
            <field eval="1" name="perm_write"></field>
            <field eval="1" name="perm_unlink"></field>
            <field eval="1" name="perm_create"></field>
        </record>

        <record id="configure_product_product_rule_user" model="ir.rule">
            <field name="name">Configure Product Template User</field>
            <field ref="product.model_product_product" name="model_id"/>
            <field name="groups" eval="[(4, ref('product_configurator.group_product_configurator'))]"/>
            <field eval="1" name="perm_read"></field>
            <field eval="1" name="perm_write"></field>
            <field eval="1" name="perm_unlink"></field>
            <field eval="1" name="perm_create"></field>
        </record>
    </data>
</odoo>
