<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="product_attribute_wizard_form">
            <field name="name">product.attribute.wizard.form</field>
            <field name="model">product.attribute.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Product Attribute">
                    <group>
                        <field name="sequence_number"/>
                    </group>
                    <footer>
                        <button name="mass_sequences" string="Submit" type="object"  class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_product_attribute_wizard" model="ir.actions.act_window">
            <field name="name">Product Attribute Value Line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.attribute.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="product_attribute_wizard_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>