<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <record id="website_sale_configurator_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.configurator.sale</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="10"/>
            <field name="inherit_id" ref="product_configurator.configurator_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='configurator_settings']" position="after">
                    <h2>Product Configurator</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <group>
                                <field name="website_tmpl_id"/>
                            </group>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
